			.row
				+card-item2('1','col-md-4 col-6','Трубный прокат')
				+card-item2('2','col-md-4 col-6','Листовой прокат')
				+card-item2('3','col-md-4 col-6','Сортовой прокат')
				+card-item2('4','col-md-4 col-6','Фасонный прокат')
