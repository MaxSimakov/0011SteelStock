									+item-sos('footer-ok')
					.col-md-auto.order-md-1
						+e.logo(href='/').d-none.d-md-block
							img(src="img/svg/logo.svg", alt="")
						+e.UL.legal
							li ОГРН 1171690041234
							li ИНН 1650341234
							li КПП 165001234
					.col.col-xl-3.d-none.d-lg-block.order-md-2
						+e.NAV.menu
							ul
								li #[a.link-white(href='#') Главная]
								li #[a.link-white(href='#') Каталог]
								li #[a.link-white(href='#') Прайс-лист]
								li #[a.link-white(href='#') Услуги]
								li #[a.link-white(href='#') О&nbsp;компании]
								li #[a.link-white(href='#') Контакты]

		+e.info
			.container
				.row
					.col-12.col-lg
						+e.copyright.text-white © ООО «СтальСклад» 2021
					.col-12.col-lg-auto.text-center
						+e.policy.link-secondary2(href='#') Политика обработки персональных данных
					.col-12.col-lg
						+e.developer Создание сайта – #[a.link-white(href='#') AD HEADS]

